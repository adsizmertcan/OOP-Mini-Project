@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Müşteri Ekleme Kaydı</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                    <label for="exampleInputName">Müşteri Adı</label>
                    <input type="text" class="form-control" asp-for="CustomerName">
                </div>
                <div class="form-group">
                    <span asp-validation-for="CustomerCity" class="text-danger"></span>
                    <label for="exampleInputPrice">Şehir</label>
                    <input type="text" class="form-control" asp-for="CustomerCity">
                </div>
                <div class="form-group">
                    @Html.Label("Meslek:");
                    @Html.DropDownListFor(x=>x.JobId ,(List<SelectListItem>)@ViewBag.V,new{@class="form-control"})
                </div>
              

                <button type="submit" class="btn btn-outline-success me-2">Ekle</button>
            </form>
        </div>
    </div>
</div>


