@using EntityLayer.Concrete
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürün Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>

                            <th>#</th>
                            <th>Müşteri Adı</th>
                            <th>Şehir</th>
                            <th>Meslek</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.CustomerId</td>
                                <td>@item.CustomerName</td>
                                <td>@item.CustomerCity</td>
                                <td>@item.Job.JobName</td>
                                <td><a href="/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-outline-info">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Customer/AddCustomer/" class="btn btn-outline-success">Yeni Müşteri Girişi</a>

            </div>
        </div>
    </div>
</div>

