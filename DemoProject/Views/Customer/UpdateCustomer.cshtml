@model EntityLayer.Concrete.Customer

@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürün Düzenleme Kaydı</h4>
            <form class="forms-sample" method="post">

                <div class="form-group">
                    @Html.HiddenFor(X=>X.CustomerId)
                    <label for="exampleInputName">Müşteri Adı</label>
                    <input type="text" class="form-control" asp-for="CustomerName">
                </div>
                <div class="form-group">

                    <label for="exampleInputPrice">Şehir</label>
                    <input type="text" class="form-control" asp-for="CustomerCity">
                </div>
                <div class="form-group">

                    @Html.Label("Meslek:");
                    @Html.DropDownListFor(x=>x.JobId ,(List<SelectListItem>)@ViewBag.V,new{@class="form-control"})
                </div>

                <button type="submit" class="btn btn-outline-success me-2">Düzenle</button>
            </form>
        </div>
    </div>
</div>

