@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürün Ekleme Kaydı</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                    <label for="exampleInputName">Ürün Adı</label>
                    <input type="text" class="form-control" asp-for="ProductName">
                </div>
                <div class="form-group">
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    <label for="exampleInputPrice">Ürün Fiyatı</label>
                    <input type="text" class="form-control" asp-for="ProductPrice">
                </div>
                <div class="form-group">
                    <span asp-validation-for="ProductStock" class="text-danger"></span>
                    <label for="exampleInputStock">Stok Sayısı</label>
                    <input type="text" class="form-control" asp-for="ProductStock">
                </div>
                
                <button type="submit" class="btn btn-outline-success me-2">Ekle</button>
            </form>
        </div>
    </div>
</div>

